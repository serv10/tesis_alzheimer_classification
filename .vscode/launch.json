{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend Node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/back",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug Frontend Vue",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/front/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": [
        "Debug Backend Node",
        "Debug Frontend Vue"
      ],
      "stopAll": true,
      "preLaunchTask": "Start Frontend Vue"
    }
  ]
}
