{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend Vue",
      "type": "npm",
      "script": "dev",
      "path": "front/",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "Local:.*http://localhost:5173"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "servers"
      }
    }
  ]
}
