---
import Layout from "@layouts/Layout.astro";
import { BarChartRealAlzheimerXCount } from "@dashboards/BarChartRealAlzheimerXCount";
import { BarChartPredictionAlzheimerXCount } from "@dashboards/BarChartPredictionAlzheimerXCount";
import { BarChartStacked } from "@dashboards/BarChartStacked";
---

<Layout title="Azlheimer Classification Website">
  <main id="reports" class="p-5 gap-5">
    <div style={{ gridArea: "report1" }}>
      <BarChartRealAlzheimerXCount client:load />
    </div>
    <div style={{ gridArea: "report2" }}>
      <BarChartPredictionAlzheimerXCount client:load />
    </div>
    <div style={{ gridArea: "report3" }}>
      <BarChartStacked client:load />
    </div>
  </main>
</Layout>

<style>
  #reports {
    display: grid;
    grid-template:
      "report1 report2" 1fr
      "report3 ." auto / 1fr 1fr;
    align-items: center;
  }
</style>
