---
interface Props {
  title: string;
  class?: string;
  disabled?: boolean;
  type: "button" | "submit" | "reset";
}
const { title, class: ClassName, disabled = false, type } = Astro.props;
---

<button
  type={type}
  class=`text-white font-medium rounded-lg text-sm px-5 py-2.5 text-center transition duration-200 ${ClassName}`
  disabled={disabled}
>
  {title}
</button>
